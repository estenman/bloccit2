<h1>New Sponsored Post</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for Sponsored posts</p>
    <ul>
      <li>Make sure it is worthwhile</li>
      <li>Remember syntax</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for [@topic, @sponsor] do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price %>
      </div>
      <div class="form-group">
        <%= f.submit "Save" %>
      </div>
    <% end %>
  </div>
</div>
