<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<% if user_post_comment_not_exist? %>
    <%= @user.name %> has not submitted any posts yet.
<% else %>
    <h2>Posts</h2>
    <%= render @user.posts %>
    <h2>Comments</h2>
    <%= render @user.comments %>
<% end %>

<%= @user.favorite_list.each do |favorited_post| %>
    <%= favorited_post.title %>
    <%= favorited_post.comments.count %>
    <%= favorited_post.votes %>
    <%= image_tag favorited_post.user.avatar_url(128), class: 'media-object' %>
<% end %>
